{
  "name": "matrix-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:js": "webpack --mode production --config webpack.config.js",
    "build:css": "npm run build:css:app && npm run build:css:editor && npm run build:css:woo",
    "build:css:app": "postcss assets/css/app.css -o dist/app.css",
    "build:css:editor": "cross-env TAILWIND_CONFIG=tailwind.editor.config.cjs postcss assets/css/editor.css -o dist/editor.css",
    "build:css:woo": "cross-env TAILWIND_CONFIG=tailwind.woocommerce.config.cjs postcss assets/css/woocommerce.css -o dist/woocommerce.css",
    "watch:css:app": "nodemon --watch assets/css --ext css --exec \"postcss assets/css/app.css -o dist/app.css\"",
    "watch:css:editor": "nodemon --watch assets/css/editor.css --exec \"cross-env TAILWIND_CONFIG=tailwind.editor.config.cjs postcss assets/css/editor.css -o dist/editor.css\"",
    "watch:css:woo": "nodemon --watch assets/css/woocommerce.css --exec \"cross-env TAILWIND_CONFIG=tailwind.woocommerce.config.cjs postcss assets/css/woocommerce.css -o dist/woocommerce.css\"",
    "watch:js": "nodemon --watch assets/js --exec \"webpack --config webpack.config.js\"",
    "dev": "concurrently \"npm run watch:css:app\" \"npm run watch:css:editor\" \"npm run watch:css:woo\" \"webpack serve --config webpack.config.js\"",
    "flexi:install": "node scripts/flexi-install.cjs",
    "test:php": "vendor/bin/pest",
    "test:links": "node scripts/run-blc.js",
    "test:perf": "lhci autorun --preset=desktop --budget-path=.lighthouserc.js --cwd=tests",
    "perf:open": "npm run test:perf && open-cli lhci-report/index.html",
    "test": "npm run test:php",
    "ci": "npm run test && npm run test:perf && npm run test:links"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@lhci/cli": "^0.15.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "broken-link-checker": "^0.7.8",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "glob": "^11.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^2.0.22",
    "open-cli": "^8.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "postcss-loader": "^7.3.4",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "tailwindcss-container-sizes": "^1.0.2",
    "tailwindcss-pseudo": "^1.0.3",
    "ts-loader": "^9.4.3",
    "typescript": "^5.5.4",
    "undici-types": "^6.19.6",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.14.9"
  }
}
